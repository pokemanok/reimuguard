<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<com.pokeman.reimuguard.view.NoScrollViewPager
    android:id="@+id/vp_content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    />

  <RadioGroup
    android:id="@+id/rg_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_tab_bg"
    android:orientation="horizontal"
    android:gravity="center"
    >

      <RadioButton
          style="@style/Bottom_Tab_Style"
          android:id="@+id/rb_device"
          android:drawableTop="@drawable/tab_home_selector"
          android:checked="true"
          android:text="设备"/>
      <RadioButton
          style="@style/Bottom_Tab_Style"
          android:id="@+id/rb_antivirus"
          
          android:drawableTop="@drawable/tab_blacklist_selector"
          android:text="杀毒"/>
      <RadioButton
          style="@style/Bottom_Tab_Style"
          android:id="@+id/rb_process"
          android:drawableTop="@drawable/tab_process_selector"
          android:text="进程管理"/>
      <RadioButton
          style="@style/Bottom_Tab_Style"
          android:id="@+id/rb_applock"
          android:drawableTop="@drawable/tab_setting_selector"
          android:text="应用锁"/>
      <RadioButton
          style="@style/Bottom_Tab_Style"
          android:id="@+id/rb_theftproof"
          android:drawableTop="@drawable/tab_theftproof_selector"
          android:text="远程定位"/>

  </RadioGroup>

</LinearLayout>
